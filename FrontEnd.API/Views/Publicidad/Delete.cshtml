@model FrontEnd.API.Models.Publicidad

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>¿Desea eliminar esta imagen?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.HiddenFor(model => model.CodPublicidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.HiddenFor(model => model.CodPublicidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RutaArchivo)
        </dt>
        <dd class="col-sm-10">
            
            <img src=" @Url.Content(Model.RutaArchivo)" alt="" style=" width: 10%; " />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>

@model IEnumerable<FrontEnd.API.Models.Boleteria>

@{
    ViewData["Title"] = "Index";
}

<h1>Boletería</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Costo)
                </td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CodBoleteria">Editar</a> |
                    
                    <a asp-action="Delete" asp-route-id="@item.CodBoleteria">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
